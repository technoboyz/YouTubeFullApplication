@page "/Classi/{id;guid}"
@inherits PageBase
<PageTitle>Modifica Frequenza</PageTitle>
<BodyTitle Title="Modifica Frequenza" />
<ErrorMessage Message="@errorMessage" />
@if (isLoading)
{
    <BsSpinner />
}
else
{
    @if (formModel != null)
    {
        <EditForm EditContext="@editContext" OnValidSubmit="@OnSubmitAsync">
            <FluentValidationValidator />
            <ValidationSummary />

            <FormRow Label="Esito">
                <InputText class="form-control" @bind-Value="formModel.Nome" />
            </FormRow>

            <div class="row">
                <div class="col">
                    <a href="/Classi" class="btn btn-secondary me-2">Annulla</a>
                    <FormSubmit IsBusy="@isBusy" />
                </div>
            </div>
        </EditForm>
    }
}